{
  "name": "toybotsolutions-testing",
  "version": "1.0.0",
  "description": "Estructura de pruebas automatizadas independiente para ToyBotSolutions",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:clean-db": "node scripts/clean-test-db.js",
    "test:setup": "node setup/global-setup.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install --with-deps"
  },
  "keywords": [
    "testing",
    "jest",
    "supertest",
    "playwright",
    "automation"
  ],
  "author": "ToyBotSolutions Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.0",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-node": "^11.0.0",
    "jest": "^29.0.0",
    "jest-environment-node": "^29.0.0",
    "supertest": "^6.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/formbody": "^8.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.0",
    "fastify": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^3.0.0",
    "openai": "^5.11.0",
    "sqlite3": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
